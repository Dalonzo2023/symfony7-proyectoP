{% extends 'base.html.twig' %}

{% block title %}Hello PokemonsCategoriasController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/var/www/html/Pokedex/src/Controller/PokemonsCategoriasController.php</code></li>
        <li>Your template at <code>/var/www/html/Pokedex/templates/pokemons_categorias/index.html.twig</code></li>
    </ul>
</div>
<section>
    <h1>Lista de Pokémons</h1>
    <ul>
        {% for pokemon in pokemons %}
            <li>{{ pokemon.nombreP }} - Altura: {{ pokemon.altura }} - Peso: {{ pokemon.peso }} - Sexo: {{ pokemon.sexo }} - Categoría: {{ pokemon.categoria.nombre }}</li>
        {% endfor %}
    </ul>

    <h1>Lista de Categorías</h1>
    <ul>
        {% for categoria in categorias %}
            <li>{{ categoria.nombre }}</li>
        {% endfor %}
    </ul>
</section>
{% endblock %}
